<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kmarket2.dao.MyDAO">	
	
	
	<select id="selectQnaArticles" resultType="kr.co.kmarket2.vo.ArticleVO">
		SELECT a.* ,b.c1Name FROM `km_article` AS a JOIN `km_qna_cate` AS b ON a.cate=b.cate WHERE `group`='qna' AND `uid`=#{uid} ORDER BY `no` DESC LIMIT #{start},5;
	</select>
	
	<select id="selectCountTotal" resultType="int">
		select count(`no`) from `km_article` where `group`=#{group};
	</select>
</mapper>